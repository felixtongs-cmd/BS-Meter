{
  "manifest_version": 3,
  "name": "BS Meter",
  "version": "1.1.0",
  "description": "Detect fake reviews and dropshipping scams on Amazon, Shopify, and Alibaba.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "*://*.amazon.com/*",
    "*://*.amazon.com.au/*",
    "*://*.shopify.com/*",
    "*://*.myshopify.com/*",
    "*://*.alibaba.com/*",
    "*://*.alibaba.com.cn/*",
    "https://bsmeter.vercel.app/*",
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*",
        "*://*.amazon.com.au/*",
        "*://*.shopify.com/*",
        "*://*.myshopify.com/*",
        "*://*.alibaba.com/*",
        "*://*.alibaba.com.cn/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://bsmeter.vercel.app/*", "http://localhost:3000/*"],
      "js": ["content-sync.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
